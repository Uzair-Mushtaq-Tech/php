<?php
class Car {
    private $brand;
    private $color;

    public function __construct($brand, $color) {
        $this->brand = $brand;
        $this->color = $color;
    }

    public function displayDetails() {
        echo "$this->brand - $this->color<br>";
    }
}

$car1 = new Car("Toyota", "Red");
$car2 = new Car("Honda", "Blue");

$car1->displayDetails();
$car2->displayDetails();
?>
